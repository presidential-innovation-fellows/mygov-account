.panel.group{"data-magellan-destination" => "info"}
  %a{:name => "info"}
  %h3
    %i{:class => "foundicon-globe"}
    Info
  .row.group
    .six.columns
      .panel.secondary.decorative.style-one{"data-magellan-destination" => "info"}   
        .flourish
          %i{:class => "foundicon-address-book"}      
        %div
          %h5 Your Local Government 
          .jurisdiction
            - @local_info['jurisdictions'].each do |jurisdiction|
              - if jurisdiction['type'] == 'government'
                %h6
                  = link_to your_government_path(:anchor => "#{jurisdiction['level']}-#{jurisdiction['type']}") do
                    %span.level
                      #{jurisdiction['level_name']}: 
                    %span.name
                      = jurisdiction['name']
    .six.columns
      .panel.decorative.style-four
        %i{:class => "foundicon-compass"}   
        %h4
          Introducing the Discovery Bar
        %p 
          %strong
            Find services and information relevant to you. 
          Install the Discovery Bar Chrome Extension, or Firefox plugin.
        %a.button.positive{:href => "/discovery/"} Learn more
